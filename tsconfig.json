{
  "compilerOptions": {
    "target": "ES2021",
    "module": "CommonJS",
    "lib": ["es2022", "es7", "es6", "dom"],
    "declaration": true,
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "rootDir": ".",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
  },
  "exclude": [
    "node_modules/**/*",
    "dist"
  ],
  "include": [
    "./**/*.ts"
  ]
}